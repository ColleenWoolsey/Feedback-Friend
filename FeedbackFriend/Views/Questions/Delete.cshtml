@model FeedbackFriend.Models.Question

@{
    ViewData["Title"] = "Delete";
}

<h3>
    Delete Question for Survey:      @Html.DisplayFor(model => model.Survey.SurveyName)     |
    <a asp-controller="Surveys" asp-action="Details" asp-route-id="@Model.SurveyId">Back to List</a>
</h3>

<h4>Are you sure you want to delete this Question?</h4>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Survey)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Survey.SurveyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionText)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>    
</div>
