@model FeedbackFriend.Models.CreateQuestionWithSurveyIdViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add Questions to Survey</h2>
<hr />

<div class="row">
    <div class="col-lg-8">
        <dl>
            <dd>
                @Html.DisplayFor(model => model.Survey.SurveyName)
                <br />
            </dd>
        </dl>
        <div class="col-sm-8">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Survey.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Survey.Description)
                </dd>
            </dl>
        </div>
        <div class="col-sm-8">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Survey.Instructions)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Survey.Instructions)
                </dd>
            </dl>
        </div>
    </div>
</div>

    <hr />
    <div class="row">
        <div class="col-md-11">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @*<div class="form-group">
                        <label asp-for="SurveyId" class="control-label"></label>
                        <select asp-for="SurveyId" class ="form-control" asp-items="ViewBag.SurveyId"></select>
                    </div>*@
                <div class="form-group">
                    <label asp-for="QuestionText" class="control-label"></label>
                    <input asp-for="QuestionText" class="form-control" />
                    <span asp-validation-for="QuestionText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Home" asp-action="LoggedIn">Back to List of Surveys</a>
    </div>

    @section Scripts
        {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

