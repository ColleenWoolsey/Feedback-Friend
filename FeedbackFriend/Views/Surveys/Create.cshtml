@model FeedbackFriend.Models.Survey

@{
    ViewData["Title"] = "Create";
}

<h2>Create Survey</h2>

<div>
    <a asp-action="LoggedIn">Back to List of Existing Surveys</a>
</div>

<hr />
<div class="row">
    <div>
        <form asp-action="Create" class="form-check-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*<div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                </div>*@

            <div class="form-group col-md-3" style="clear: both; padding: 5px; margin: 0; height: 5px; display: block;">
                <label asp-for="SurveyName" class="control-label"></label>
                <input asp-for="SurveyName" class="form-control" />
                <span asp-validation-for="SurveyName" class="text-danger"></span>
            </div>

            <div class="form-group col-md-7" style="clear: both; padding: 5px; margin: 0; height: 5px; display: block;">
                <label asp-for="Instructions" class="control-label"></label>
                @Html.TextArea("Instructions", null, new { @class = "form-control" })
                @*<input asp-for="Instructions" class="form-control" />*@
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>

            <div class="form-group col-md-7" style="clear: both; padding: 5px; margin: 0; height: 0; display: block;">
                <label asp-for="Description" class="control-label"></label>
                @Html.TextArea("Description", null, new { @class = "form-control" })
                @*<input asp-for="Description" class="form-control" />*@
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3" style="clear: both; padding: 5px; margin: 0; height: 0; display: block;">
                <p>Initialize Survey &</p>
                <input type="submit" value="Add Questions" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>