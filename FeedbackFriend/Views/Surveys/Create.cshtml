@model FeedbackFriend.Models.SurveysViewModel

@{
    ViewData["Title"] = "Create";
}

<h3>
    Create Survey     |
    <a asp-controller="Surveys" asp-action="LoggedIn">Back to List</a>
</h3>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="SurveyId" /> Only need for Edit?*@

            <div class="form-group" style="margin-bottom: 30px;">
                <input asp-for="Survey.SurveyName" class="form-control" />
                <span asp-validation-for="Survey.SurveyName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom: 30px;">
                <label asp-for="Survey.Description" class="control-label"></label>
                @Html.TextArea("Survey.Description", null, new { @class = "form-control" })
                <span asp-validation-for="Survey.Description" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom: 30px;">
                <label asp-for="Survey.Instructions" class="control-label"></label>
                @Html.TextArea("Survey.Instructions", null, new { @class = "form-control" })
                <span asp-validation-for="Survey.Instructions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
  