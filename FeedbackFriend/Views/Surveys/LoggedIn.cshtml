@model IEnumerable<FeedbackFriend.Models.Survey>

@{
    ViewData["Title"] = "LoggedIn";
}

<table class="table"  style="margin-top: 10px; border: none;">
    <thead >
        <tr style="background-color: #0062cc; color: white; font-size:x-large; border: none;">
            <th width="20%" style="border: none;">
                @Html.DisplayNameFor(model => model.SurveyName)
            </th>
            <th width="39%" style="border: none;">
                @Html.DisplayNameFor(model => model.Instructions)
            </th>
            <th width="39%" style="border: none;">
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>

    <tbody style="background-color: #f0f1f2; border: none;">
        @foreach (var item in Model)
        {
            <tr style="border: none;">
                <td style="background-color: #f0f1f2; border: none; font-size: larger; font-weight: 400;">
                    @Html.DisplayFor(modelItem => item.SurveyName)
                </td>
                <td style="background-color: #f0f1f2; border: none;">
                    <textarea style="border: none; width: 100%; color: gray; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: content-box;">@Html.DisplayFor(modelItem => item.Description) </textarea>
                </td>
                <td style="background-color: #f0f1f2; border: none;">
                    <textarea style="border: none; width: 100%; color: gray; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: content-box;">@Html.DisplayFor(modelItem => item.Instructions) </textarea>
                </td>
            </tr>
            <tr style="background-color: white; border: none;">
                <td>
                    <a class="btn btn-outline-primary" style="font-size: larger; border: none;" asp-Controller="Answers" asp-action="Complete" asp-route-id="@item.SurveyId">COMPLETE SURVEY</a>
                </td>
                <td>
                    <span style="font-size:larger;">QUESTIONS</span>
                    <a class="btn btn-outline-primary" asp-controller="Questions" asp-action="Create" asp-route-id="@item.SurveyId">ADD</a>
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.SurveyId">EDIT</a>

                </td>
                <td>
                    <span style="font-size:larger;">SURVEY</span>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.SurveyId">EDIT</a>
                    <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.SurveyId">DELETE</a>
                </td>
            </tr>
            <tr style="border: none;">
                <td style="border: none;"></td>
                <td style="border: none;"></td>
                <td style="border: none;"></td>
            </tr>

        }
    </tbody>
</table>